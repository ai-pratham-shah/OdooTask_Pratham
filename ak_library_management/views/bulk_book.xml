<odoo>
    <record id="view_bulk_upload_books_list" model="ir.ui.view">
        <field name="name">bulk.upload.books.list</field>
        <field name="model">bulk.upload.books</field>
        <field name="arch" type="xml">
            <list string="Bulk Upload Books">
                <field name="book_names"/>
                <field name="author"/>
            </list>
        </field>
    </record>

    <record id="view_bulk_upload_books_form" model="ir.ui.view">
        <field name="name">bulk.upload.books.form</field>
        <field name="model">bulk.upload.books</field>
        <field name="arch" type="xml">
            <form string="Bulk Upload Books">
                <header>
                    <button name="create_product" type="object" string="Create products" class="oe_highlight"/>
                    <button name="revert_changes" type="object" string="Revert products"
                            class="oe_highlight" />
                </header>
                <group>
                    <field name="book_names"/>
                    <field name="author"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_bulk_upload_books" model="ir.actions.act_window">
        <field name="name">Bulk Upload Books</field>
        <field name="res_model">bulk.upload.books</field>
        <field name="view_mode">list,form</field>
         <field name="view_id" ref="view_bulk_upload_books_list"/>
    </record>

    <menuitem id="menu_bulk_upload_books" name="Bulk Upload Books" parent="menu_library_management" action="action_bulk_upload_books"/>
</odoo>
