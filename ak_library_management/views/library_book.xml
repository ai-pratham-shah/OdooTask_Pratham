<odoo>
    <!-- list View for Books -->
    <record id="view_library_book_list" model="ir.ui.view">
        <field name="name">library.book.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list string="Books">
                <field name="name"/>
                <field name="author"/>
                <field name="isbn"/>
                <field name="publication_date"/>
                <field name="category_id"/>
                <field name="tags_ids" widget="many2many_tags"/>
                <field name="state"/>
                <field name="description"/>
                <field name="library_id"/>
            </list>
        </field>
    </record>

    <!-- Form View for Books -->
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                 <header>
                     <field name="state" widget="statusbar" statusbar_visible="available,borrowed"  options="{'clickable': '1'}" tracking="True"/>
                 </header>
                <sheet>
                    <group name="col2">
                        <group>
                            <field name="name"/>
                            <field name="author"/>
                            <field name="isbn"/>
                            <field name="category_id"/>
                        </group>
                        <group>
                            <field name="tags_ids" widget="many2many_tags"/>
                            <field name="publication_date"/>
                            <field name="description"/>
                            <field name="library_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Books List View -->
    <record id="action_library_books" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_library_book_list"/>
    </record>

    <!-- Library home Menu -->
    <menuitem id="menu_library_management" name="Library management"/>

    <!-- Submenu for Library management -->
    <menuitem id="menu_library_books" name="Books" parent="menu_library_management"/>

    <!-- Submenu for Library management-->
    <menuitem id="menu_library_books_child" name="Books" parent="menu_library_books" action="action_library_books"/>
</odoo>
