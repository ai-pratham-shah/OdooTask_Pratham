<odoo>
    <!-- list View for book location -->
    <record id="view_library_book_location_list" model="ir.ui.view">
        <field name="name">library.book.location.list</field>
        <field name="model">library.book.location</field>
        <field name="arch" type="xml">
            <list string="location">
                <field name="name"/>
                <field name="location"/>
                <field name="capacity"/>
                <field name="notes"/>
            </list>
        </field>
    </record>

    <!-- form View for book location -->
    <record id="view_library_book_location_form" model="ir.ui.view">
        <field name="name">library.book.location.form</field>
        <field name="model">library.book.location</field>
        <field name="arch" type="xml">
            <form string="Book">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button icon="fa-book" type="object" name="action_view_borrowed_books">
                            <field string="Book Borrowed" name="borrowed_books_count" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <field name="name" required="1"/>
                        <field name="location"/>
                        <field name="capacity"/>
                        <field name="notes"/>
                    </group>
                    <!-- Notebook tab for Books -->
                    <notebook>
                        <page string="Books">
                            <field name="book_ids" options="{'create':false}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Library location-->
    <record id="action_library_books_location" model="ir.actions.act_window">
        <field name="name">Book Location</field>
        <field name="res_model">library.book.location</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_library_book_location_list"/>
    </record>
    <!-- Submenu for Library management -->
    <menuitem id="menu_library_book_location" name="Library" parent="menu_library_management"
              action="action_library_books_location"/>
</odoo>

