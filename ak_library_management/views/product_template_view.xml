<odoo>
    <!-- list View for inherited product template -->
    <record id="view_product_template_inherit_list" model="ir.ui.view">
        <field name="name">product.template.list.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_variant_count']" position="before">
                <field name="is_library_book"/>
                <field name="author"/>
                <field name="publisher"/>
                <field name="barcode"/>
                <field name="edition"/>
                <field name="published_date"/>
                <field name="pages"/>
                <field name="available"/>
                <field name="status"/>
            </xpath>
        </field>
    </record>

    <!-- form View for inherited product template -->
    <record id="view_product_template_inherit_form" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
             <header>
                 <field name="status" widget="statusbar" statusbar_visible="available,borrowed"
                        options="{'clickable': '1'}" tracking="True"/>
             </header>
             <xpath expr="//field[@name='standard_price']" position="attributes">
                 <attribute name="readonly">sale_ok == True</attribute>
             </xpath>
             <xpath expr="//page[@name='inventory']" position="after">
                    <page string="Book Details">
                        <group name="col2">
                             <group>
                                <field name="is_library_book" required="sale_ok == True"/>
                                <field name="author" required="sale_ok == True"/>
                                <field name="publisher" required="sale_ok == True"/>
                             </group>
                             <group>
                                 <field name="edition" required="sale_ok == True"/>
                                 <field name="published_date" required="sale_ok == True"/>
                                 <field name="pages" required="sale_ok == True"/>
                                 <field name="available" required="sale_ok == True"/>
                                 <field name="status" required="sale_ok == True"/>
                             </group>
                         </group>
<!--                        <footer>-->
<!--                            <button name="action_mark_borrowed" invisible="status != 'available'" string="Mark as Borrowed"-->
<!--                                    type="object" class="btn-secondary"/>-->
<!--                            <button name="action_mark_available" invisible="status != 'borrowed'" string="Mark as Available"-->
<!--                                    type="object" class="btn-secondary"/>-->
<!--                        </footer>-->
                    </page>
             </xpath>
        </field>
    </record>

    <!-- Submenu for Library management -->
    <menuitem id="menu_product_template" name="Product" parent="menu_library_management" action="product.product_template_action"/>
</odoo>




