<odoo>
    <!-- list View for book category -->
    <record id="view_library_book_category_list" model="ir.ui.view">
        <field name="name">library.book.category.list</field>
        <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <list string="category">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- form View for book category -->
    <record id="view_library_book_category_form" model="ir.ui.view">
        <field name="name">library.book.category.form</field>
        <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="tag_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_library_books_category" model="ir.actions.act_window">
        <field name="name">Book category</field>
        <field name="res_model">library.book.category</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_library_book_category_list"/>
    </record>

    <menuitem id="menu_library_books_category_child" name="Book category" parent="menu_library_books_tag" action="action_library_books_category"/>

</odoo>