<odoo>
    <!--    change product variants to product items-->
    <menuitem id="sale.menu_products"
            name="Product Items"
            parent="sale.product_menu_catalog"
            action="product.product_normal_action_sell"
            groups="product.group_product_variant"
            sequence="50"/>
    <!--    add customers in configuration below to the sales team-->
    <menuitem id="sale.res_partner_menu"
            action="account.res_partner_action_customer"
            parent="sale.menu_sale_config"
            groups="sales_team.group_sale_salesman"
            sequence="25"/>
    <!--    Inherit Window action from sale-->
    <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">
        <field name="name">Draft Quotations</field>
        <field name="view_mode">list</field>
    </record>
</odoo>

